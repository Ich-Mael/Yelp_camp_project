<% layout('layouts/boilerplate')%>

<h1>Edit Campground</h1>
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input name="campground[title]" type="text" value="<%=campground.title%>" id="title" />
    </div>
    <div>
        <label for="location">Location</label>
        <input name="campground[location]" type="text" value="<%=campground.location%>" id="location"/>
    </div>
    <div>
        <label for="location">Description</label>
        <br/>
        <textarea name="campground[description]" id="location" cols="30" rows="10">
            <%=campground.description%>
        </textarea>
    </div>
    <button>Update Campground</button>
</form>

<a href="/campgrounds/<%=campground._id%>">Go back to campground</a>
