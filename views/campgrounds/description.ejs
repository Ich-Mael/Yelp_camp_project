<%- include ('../partials/header') %>
<div class="container">
	<div class="row mt-4">
		<div class="col-md-3">
			<p class="lead text-white text-center">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9 bg-white text-dark">
			<div class="img-thumbnail">
				<img class="image-responsive img-fluid w-100" alt=""  src="<%=campground.image%>" />
			</div>
			<div class="caption-full">
				<h5 class="my-2 text-danger float-right"> $9.00/night</h5>
				<h4 class="text-secondary ml-3"><%=campground.name%></h4>
				<h4 class="my-5"><%=campground.description%></h4>
				<p><em>Submitted By <%= campground.author.username%></em></p>
				<% if(currentUser && campground.author.id.equals(currentUser.id)){%>
				<form class="form-inline" action="/campgrounds/<%=campground.id%>?_method=delete" method="POST">
				<a class="btn btn-warning" href="/campgrounds/<%=campground.id%>/edit">Edit</a>
					<button type="submit" class="btn btn-danger mx-3">Delete</button>
				</form>
				<%}%>
			</div>
			<hr>
	        <div class=""></div>
		    <div class="text-right pr-3">
		      <button class="btn btn-success">
			  <a class="text-dark" href="/campgrounds/<%=campground.id%>/comments/new">
				Add a new commment
			  </a>
			  </button>
			</div>
			<% campground.comments.forEach((comment)=>{%>
			<div class="row">
				<div class="col-md-12">
					<h3><strong><%= comment.author.username %></strong></h3>
					<span class="float-right">10 days ago</span>
					<p><%= comment.text %></p>
					
					<form class="form-inline"
						action="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>?_method=DELETE" method="POST">
<a class="btn btn-xs btn-warning"
						href="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>/edit">Edit Comment</a>
						<button class="btn btn-xs btn-danger mx-4">Delete Comment</button>
					</form>
				</div>
			</div>
			<%}) %>
		</div>
	</div>
</div>

<%- include ('../partials/footer') %>