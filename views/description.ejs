<%- include ('partials/header') %>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-3">
            <p class="lead text-white text-center">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
	    </div>
	</div>
	<div class="col-md-9 bg-white rounded text-dark">
            <div class="thumbnail">
		<img class="image-responsive" alt="" width="300px" height="300px" src="<%=campground.image%>"/>
	    </div>
            <div class="caption-full">
		<h5 class="my-2 text-danger float-right"> $9.00/night</h5>
		<h4 class="text-secondary ml-3"><%=campground.name%></h4>
		<h4 class="my-5"><%=campground.description%></h4>
		<p><em>Submitted By <%= campground.author.username%></em></p>	
		<% if(currentUser && campground.author.id.equals(currentUser.id)){%>
                <a class="btn btn-warning" href="/campgrounds/<%=campground.id%>/edit">Edit</a>
		
		<form action="/campgrounds/<%=campground.id%>?_method=delete" method="POST" >
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
		<%}%>
	    </div>
	    <div class="">
		<div class="text-right">
		    <button class="btn btn-success">
			<a class="text-dark" href="/campgrounds/<%=campground.id%>/comments/new">
			    Add a new review
			</a>
		    </button>	
		    <hr/>
		</div> 
		<% campground.comments.forEach((comment)=>{%>
		    <div class="row">
			<div class="col-md-12">
			    <h3><strong><%= comment.author.username %></strong></h3>     
			    <span class="float-right">10 days ago</span>
			    <p><%= comment.text %></p>
                            <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>/edit">Edit Comment</a>
			</div>
		    </div>
		<%}) %>
	    </div>	
	</div>
    </div>	
</div>

